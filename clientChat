    private void sendMsgActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
        try
       {
        String msgOutput = "";
        msgOutput = msgViewer.getText().trim();
        dout.writeUTF(msgOutput); //message sends from server to client
       }
       catch(Exception e)
       {
           
       }
    }                                       

