        try
        {
            s = new Socket("10.35.107.1",139); //server port number
            
            din =  new DataInputStream(s.getInputStream());
            dout  = new DataOutputStream(s.getOutputStream());
            String msgInput = "";
            
            while(!msgInput.equals("exit"))
            {
                msgInput = din.readUTF();
                msgViewer.setText(msgViewer.getText().trim()+"\n Server"+msgInput); //shows message in box
            }
                
            
        }
        catch(Exception e)
        {
            
        }
        
    }

