    private void sendMsgBttnActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
       try
       {
        String msgOutput = "";
        msgOutput = msgBox.getText().trim();
        dout.writeUTF(msgOutput); //message sends from server to client
       }
       catch(Exception e)
       {
           
       }
    }                                           

