        /* Create and display the form */
        java.awt.EventQueue.invokeLater(new Runnable() {
            public void run() {
                new serverChat().setVisible(true);
            }
        });
        
        String msgInput = "";
        try
        {
            ss = new ServerSocket(139); //server port number
            s = ss.accept(); //server accepts connections
            
            din =  new DataInputStream(s.getInputStream());
            dout  = new DataOutputStream(s.getOutputStream());
            
            while(!msgInput.equals("exit"))
            {
                msgInput = din.readUTF();
                msgBox.setText(msgBox.getText().trim()+"\n"+msgInput); //shows message in box
            }
                
            
        }
        catch(Exception e)
        {
            
        }
        
    }

